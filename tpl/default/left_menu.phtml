<div class="left_menu" id="sidebar">
        <ul>
		<?
			if(!isset($vars['curr_parent']))$vars['curr_parent']=0;
			$menu='';
			$i=0;
			$cnt=count($vars['menu'])-1;
            foreach($vars['menu'] as $row)
            {
				if($row['sub']==0)
				{
                    $sub = '';
                    foreach($vars['menu'] as $row2)
                    {
                        if($row2['sub']==$row['id'])
                        {
                            $pos = strpos($row2['url'], "http://");
