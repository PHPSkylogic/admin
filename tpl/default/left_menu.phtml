                            else $link=LINK."/catalog/".$row2['url'];
                            $sub.='<li id="licat_'.$row2['id'].'"><a href="'.$link.'">'.$row2['name'].'</a></li>';
                        }
                    }
					
					$pos = strpos($row['url'], "http://");
					if($pos !== false)$link=$row['url'].'" target="_blank" rel="nofollow';
					else $link=LINK."/catalog/".$row['url'];
					
					$style='';
					if($i==$cnt)$style='border-bottom:none;';
					
                    if($sub!='')
					{
						$menu.='<li id="licat_'.$row['id'].'" class="parent"><a href="'.$link.'" style="'.$style.'">'.$row['name'].'</a>';
						$menu.='<ul>'.$sub.'</ul>';
					}
					else $menu.='<li id="licat_'.$row['id'].'"><a href="'.$link.'" style="'.$style.'">'.$row['name'].'</a>';
					
					$i++;
				}
            }
			echo $menu;
        ?>
	</ul>
